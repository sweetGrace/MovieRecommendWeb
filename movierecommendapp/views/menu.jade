doctype html
html(lang='zh-cn')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    meta(name='description' content='')
    meta(name='author' content='')
    title 目录
    // CSS FILES
    link(rel='preconnect' href='https://fonts.googleapis.com')
    link(rel='preconnect' href='https://fonts.gstatic.com' crossorigin='')
    link(href='https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;600;700&display=swap' rel='stylesheet')
    link(href='css/bootstrap.min.css' rel='stylesheet')
    link(href='css/bootstrap-icons.css' rel='stylesheet')
    link(href='css/tooplate-crispy-kitchen.css' rel='stylesheet')
    style
      include css/bootstrap.min.css
      include css/bootstrap-icons.css
      include css/tooplate-crispy-kitchen.css
  body
    nav.navbar.navbar-expand-lg.bg-white.shadow-lg
      .container
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
          span.navbar-toggler-icon
        a.navbar-brand(onclick="window.location='/index'")
          | 电影推荐
        .d-lg-none
          button.custom-btn.btn.btn-danger(type='button' data-bs-toggle='modal' data-bs-target='#BookingModal') 1
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.mx-auto
            li.nav-item
              a.nav-link(onclick="window.location='/index'") 主页
            li.nav-item
              a.nav-link(onclick="window.location='/menu'") 目录
        .d-none.d-lg-block
          button.custom-btn.btn.btn-danger(type='submit' onclick="window.location='/loginpage'") 登录
          button.custom-btn.btn.btn-danger(type='submit' onclick="window.location='/registerpage'") 注册
    main
      header.site-header.site-menu-header
        .container
          .row
            .col-lg-10.col-12.mx-auto
              h1.text-white 随机 推荐
              strong.text-white 登录之后可以享受定制电影推荐哦
        .overlay
      section.menu.section-padding
        .container
          .row
            input(type='text',style="visibility: hidden;width:0px; height:0px;",name='userid', value=userid)
            table( cellpadding="2" cellspacing="2")
              tr
               -for(var i=0;i<movieinfo.length;i++)
                td
                  .col-lg-6
                    .menu-thumb
                      .menu-image-wrap
                        img.img-fluid.menu-image(src=movieinfo[i].picture alt='')
                      .menu-info.d-flex.flex-wrap.align-items-center

                        h4.mb-0 #{ movieinfo[i].moviename }
                        input(type='text',style="visibility: hidden;width:0px; height:0px;",name='movieid', value=movieinfo[i].movieid)

                       -if((i+1)%2==0)
                         tr
                

    footer.site-footer.section-padding
      .container
        .row
        // row ending
        // container ending
        // JAVASCRIPT FILES
        script(src='js/jquery.min.js')
        script(src='js/bootstrap.bundle.min.js')
        script(src='js/custom.js')
        script
          include js/jquery.min.js
          include js/bootstrap.bundle.min.js
          include js/custom.js




